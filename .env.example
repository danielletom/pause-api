# Database (Neon PostgreSQL)
NEON_DATABASE_URL=postgresql://user:password@host/dbname?sslmode=require

# Clerk Authentication
CLERK_SECRET_KEY=sk_test_xxxx

# Cron Job Authorization
# Used by Vercel cron jobs to authenticate requests
CRON_SECRET=your-cron-secret-here

# RevenueCat (Subscriptions)
REVENUECAT_WEBHOOK_SECRET=your-revenuecat-webhook-secret

# Anthropic API (AI Narratives)
# Used by @ai-sdk/anthropic â€” reads this env var automatically
ANTHROPIC_API_KEY=sk-ant-xxxx

# AI Narratives Kill Switch
# Set to "true" to enable Claude-powered narrative generation
# When missing or "false", the narratives cron returns early without calling Claude
NARRATIVES_ENABLED=false
